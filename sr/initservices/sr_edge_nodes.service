[Unit]
Description=Edge Nodes Service
After=sr_rabbitmq_docker.service sound.target
Requires=sr_rabbitmq_docker.service sound.target

[Service]
Environment=XDG_RUNTIME_DIR=/run/user/1000
ExecStart=/srv/sr/edge/build/run
WorkingDirectory=/srv/sr/edge/build

# Always restart on failure
Restart=always
RestartSec=5

User=sr
Group=sr

[Install]
WantedBy=multi-user.target

